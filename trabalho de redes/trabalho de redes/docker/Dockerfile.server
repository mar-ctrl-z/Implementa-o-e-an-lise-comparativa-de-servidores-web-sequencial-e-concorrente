FROM ubuntu:22.04

# Instalar Python e dependências necessárias
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Criar diretório de trabalho
WORKDIR /app

# Copiar todos os arquivos do projeto
COPY . /app/

# Expor porta 80
EXPOSE 80

# Variáveis de ambiente para logs
ENV PYTHONUNBUFFERED=1

# Comando para executar o servidor sequencial (padrão)
CMD ["python3", "-u", "server/sequential_server.py"]
